<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemoteForAndroidTV.DiscoveryDevicesPage">

    <StackLayout Padding="10">
        <Label x:Name="DiscoveryStatusLabel" Text="Discovery stopped" HorizontalOptions="Center" VerticalOptions="Center" />
        <Button Text="Start Discovery" Clicked="OnStartDiscoveryClicked" />
        <Button Text="Stop Discovery" Clicked="OnStopDiscoveryClicked" />
        <ListView x:Name="DevicesListView" ItemTapped="OnDeviceTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
